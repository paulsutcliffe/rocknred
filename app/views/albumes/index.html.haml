%h2.title
  = page_title! I18n.t('albumes.title')

#content
  - if current_admin
    = link_to I18n.t('album.new'), new_album_path
  .table-head
    = I18n.t('activerecord.attributes.album.nombre')
    - for album in @albumes
      .block{ :class => cycle(:odd, :even) }
        = album.nombre
      - if current_admin
        .admin-controls
          = link_to I18n.t('show'), album, :class => 'button show'
          = link_to I18n.t('edit'), edit_album_path(album), :class => 'button edit'
          = link_to I18n.t('destroy'), album, :confirm => I18n.t('confirm_delete'), :class => 'button delete', :method => :delete
